{
  "compilerOptions": {
    "lib": ["dom","es2017","scripthost"],
    "target": "ES2017",
    "module": "CommonJs",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
